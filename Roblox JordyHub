    for i = 1, 10 do
        warn("ðŸ”¥ SYSTEM OVERRIDE [" .. i .. "]")
    end
end)

-- Glitch Aura
makeButton("Glitch Aura", 330, function()
    local char = player.Character
    if not char then return end
    local aura = Instance.new("ParticleEmitter")
    aura.Texture = "rbxassetid://243098098"
    aura.Rate = 100
    aura.Lifetime = NumberRange.new(1)
    aura.Speed = NumberRange.new(0)
    aura.Size = NumberSequence.new(3)
    aura.Color = ColorSequence.new(Color3.fromRGB(255, 0, 0))
    aura.LightEmission = 1
    aura.Parent = char:FindFirstChild("HumanoidRootPart")
end)

-- Place ID Input
local placeInput = Instance.new("TextBox", frame)
placeInput.Size = UDim2.new(0, 320, 0, 30)
placeInput.Position = UDim2.new(0, 20, 0, 370)
placeInput.PlaceholderText = "Enter Place ID to teleport all"
placeInput.TextColor3 = Color3.new(1, 0, 0)
placeInput.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
placeInput.Font = Enum.Font.Code
placeInput.TextSize = 18

-- Teleport All
makeButton("Teleport All to Place", 410, function()
    local placeId = tonumber(placeInput.Text)
    if placeId then
        for _, plr in pairs(Players:GetPlayers()) do
            TeleportService:Teleport(placeId, plr)
        end
    else
        warn("Invalid Place ID")
    end
end)

-- Crash All
makeButton("Crash All", 450, function()
    for i = 1, 100 do
        local part = Instance.new("Part")
        part.Size = Vector3.new(1000, 1000, 1000)
        part.Anchored = true
        part.Position = Vector3.new(math.random(-9999,9999), math.random(1,9999), math.random(-9999,9999))
        part.Parent = workspace
    end
end)
